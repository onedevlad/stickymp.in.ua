@import "bootstrap/bootstrap/index.styl"
@import "vars.styl"

*
	margin 0
	padding 0

button
	color white
	background red
	outline none
	border none
	padding 5% 8%
	text-shadow 1px 1px 1px #262527
	&:hover
		background d-red

html
body
	width 100%
	height 100%

.screen-1
	padding 0
	height 100%
	background-image url(../images/bg.jpg)
	background-position 50% 50%
	background-repeat no-repeat
	background-size cover
	.overlay
		padding 2%
		width 100%
		height 100%
		background rgba(black, 0.4)
		.header-info
			font-size 1.25em
			color white
			text-shadow 1px 1px 1px #262527
			.header-info-left
				img
					width 18%
				span
					margin-left 5%
			.header-info-right
				text-align center
				span
					font-weight bold
				button
					margin-top 5%
		.title
			margin-top 20%
			text-align center
			text-shadow 1px 1px 1px #262527
			span
				display block
				color white
			.main-title
				font-size 4em
			.secondary-title
				font-size 1.5em